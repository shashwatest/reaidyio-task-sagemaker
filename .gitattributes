# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Binary files
*.pkl binary
*.pt binary
*.pth binary
*.tar.gz binary
*.zip binary
*.png binary
*.jpg binary
*.jpeg binary
